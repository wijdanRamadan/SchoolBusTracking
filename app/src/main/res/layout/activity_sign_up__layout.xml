<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtsignup"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:shadowColor="#5499C7"
        android:text="SIGN UP"
        android:textColor="#5499C7"
        android:textColorHighlight="#A9CCE3"
        android:textColorHint="#5499C7"
        android:textColorLink="#5499C7"
        android:textSize="25dp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/activity_sign_up_edtuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:shadowColor="#5499C7"
        android:textColorHighlight="#5499C7"
        android:textColorLink="#5499C7"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/activity_sign_up_edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:drawableEnd="@drawable/email"
        android:ems="10"

        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:shadowColor="#5499C7"
        android:textColor="#000000"
        android:textColorHighlight="#5499C7"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/activity_sign_up_edtpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:drawableEnd="@drawable/pass"
        android:ems="10"

        android:hint="Password"
        android:inputType="textPassword"
        android:shadowColor="#5499C7"
        android:textColor="#000000"
        android:textColorHighlight="#5499C7"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/activity_sign_up_edtcon_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Confirm the Password"
        android:inputType="textPassword"

        android:shadowColor="#5499C7"
        android:textColor="#000000"
        android:textColorHighlight="#5499C7"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/activity_sign_up_btnregister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="-40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="0dp"
        android:background="#5499C7"
        android:text="Register"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

</LinearLayout>