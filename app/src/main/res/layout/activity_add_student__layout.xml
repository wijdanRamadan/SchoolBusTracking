<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudent_Layout"
    android:orientation="vertical"
    android:background="#FDFEFE ">

    <TextView
        android:id="@+id/txtadd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="80dp"
        android:text="Add student"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:text=" Name |"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/activity_student_edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="24sp"

        />


    <EditText
        android:id="@+id/activity_student_edtclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint="Student Class"
        android:background="@drawable/rounded_border_edittext"
        android:textColor="#000000"
        android:textSize="24sp"

        />

    <TextView
        android:id="@+id/txtbusno"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:text="Bus No |"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_student_edtbusno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="24sp"

        />

    <TextView
        android:id="@+id/txtpaname"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginLeft="5dp"
        android:text="Parent Name |"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/activity_student_edtpaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="24sp"

        />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_marginLeft="5dp"
        android:text="Parent Email |"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/activity_student_pemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/activity_add_student_btnsub"
        style="@style/ButtonBorder.Accent"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="-40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="0dp"

        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    </LinearLayout>

</ScrollView>