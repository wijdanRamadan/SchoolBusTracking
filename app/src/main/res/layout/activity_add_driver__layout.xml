<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FDFEFE ">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Driver ID:"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_add_driver_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/txtadd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="80dp"
        android:text="Add Driver"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/txtbusno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Bus No:"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_add_driver_edtbusno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-120dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="30dp"
        android:inputType="number"


        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Driver Name"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_add_driver_edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="30dp"

        />


    <TextView
        android:id="@+id/txtPhoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Phone No:"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_add_driver_edtphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="30dp"

        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Password:"
        android:textColor="#5499C7"
        android:textColorHighlight="#F9E79F"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/activity_add_driver_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-110dp"
        android:ems="10"
        android:hint=""
        android:textColor="#000000"
        android:textSize="30dp"

        />


    <Button
        android:id="@+id/activity_add_driver_btnsub"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="-40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="0dp"
        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold|italic" />
</LinearLayout>
</ScrollView>